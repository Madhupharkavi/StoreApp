<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:layout_margin="5dp"
    android:elevation="8dp"
    android:paddingTop="12dp"
    >

    <ImageView
        android:id="@+id/image_list"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="fitCenter"
        android:contentDescription="Product Image"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fjallraven - Foldsack No. 1 Backpack, Fits 15 Laptops"
        android:textSize="15sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/image_list"
        app:layout_constraintStart_toEndOf="@id/image_list"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/category_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="men's clothing"
        android:textSize="14sp"
        android:textColor="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="@id/titleText"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$109.99"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/category_text"
        app:layout_constraintStart_toStartOf="@id/category_text"
        android:layout_marginTop="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
